        <script>
            $(".navbar_top").on("click", function(){
                $(".arrow").toggleClass("arrow_pressed");
                $(".navbar_content").toggleClass("navbar_open");
            })

            

            //schedule functionality
            function show_schedule_page(x, duration){
                $( ".schedule_page").each(function(i, obj) {
                    if (i != x) $(obj).hide({duration: duration});
                    else $(obj).show({duration: duration})

                    if (x!=0) $(".arrow_h").addClass("arrow_h_pressed");
                });
            }

            $("#schedule_button").on("click", function(){
                if ($(".arrow_h").hasClass("arrow_h_pressed")){
                    $(".arrow_h").removeClass("arrow_h_pressed");
                    show_schedule_page(0, 400)
                }
            })

            show_schedule_page(0,0);

            $(".schedule_clickable_row").each(function(i, obj) {
                $(obj).on("click", function(){
                    show_schedule_page(i+1, 400);
                })
            });

            
        </script>
