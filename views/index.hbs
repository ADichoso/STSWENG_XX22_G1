            .card_top{
                display: flex;
                flex-direction: column;
                width: auto;
                height: auto;
                border-radius: 3rem 3rem 0 0;
                background-image: linear-gradient(to bottom, rgba(15, 16, 16, .63), rgba(15, 16, 16, 1));
                padding: 2rem 3rem 2rem 3rem;

                backdrop-filter: blur(.5rem);
            }

            .card_bottom{
                display: flex;
                flex-direction: column;
                width: auto;
                height: auto;
                background-color: rgba(15, 16, 16, 1);

                gap: 4rem;
                padding: 12rem 3rem 2rem 3rem;
            }

            .card_bottom > div {
                display: flex;
                flex-direction: column;
                gap: 1rem
            }

            .member_list {
                display: flex;
                flex-wrap: wrap;
                justify-content: space-around;
            }

            .member_card {
                background-image: linear-gradient(15deg, rgba(0, 119, 30, .39) 50%, rgba(0, 119, 30, 0) 50.1%);
                width: 25rem;
                height: 35rem;
                border-radius: 2rem;
                cursor:pointer;
                transition:150ms scale;
            }

            .member_card > .triangle {
                position:relative;

                background-color: rgba(0, 119, 30, 1);
                width: 22rem;
                height: 17rem;

                top: -6rem;
                left: 3rem;
                
                clip-path: polygon(100% 42%, 0 81%, 76% 100%);

            }

            .member_card > img{
                position: relative;
                top: 3rem;
                left: 2.5rem;
                border-radius: 1rem;
                width: 20rem;
                height: 20rem;
                background-size: cover;
                filter: grayscale(100%);
                transition: filter 200ms;
            }

            @keyframes card_click{
                0%, 100% {scale: 1;}
                20% {scale: .95;}
            }

            .member_card:active > img{
                filter: grayscale(0%);
            }

            

            .member_card:active{
                animation: card_click 200ms ease-in-out;
            }

            .member_card > div {
                position: relative;
                left: -3rem;
                top: -12rem;


                text-align: end;
                line-height: 0;
                
            }
            
            .member_card > div > h4 {
                font-size: 1.5rem;
                font-weight: 300;
                letter-spacing: .3rem;
            }

            .member_card > h6 {
                font-size: 1.5rem;
                font-weight: 100;
                letter-spacing: 0;
                position: relative;
                top: -10rem;
                text-align: center;
            }

            .member_card:hover {
                scale: 1.02;
            }


            .schedule_row {
                display: flex; 
                justify-content: space-between;
                align-items: center;
                padding: 1.25rem 0;
                overflow-x: hidden;
                overflow-y: hidden;
                text-wrap:nowrap;
                width: 100%;
            }

            .schedule_clickable_row {
                display: flex; 
                width: 100%;
                justify-content: space-between;
                align-items: center;
                padding: 1.25rem 0;
                overflow-x: hidden;
                overflow-y: hidden;
                text-wrap:nowrap;

                cursor:pointer;
            }

            .schedule_container {
                overflow-x: hidden;
                overflow-y: hidden;
            }

            .schedule_page {
                width: 100% !important; 
                height: auto;
                overflow-x: hidden;
            }

            .navbar_desktop {
                display: none;
                margin-left: auto;
                margin-right: 2rem;
                height: 100%;
            }

            .navbar_desktop > a {
                background-image: linear-gradient(to bottom, rgba(0, 119, 30, 0), rgba(0, 119, 30, 0), rgba(0, 119, 30, 0.24));
                background-size: 100% 200%;
                color: white;
                text-decoration: none;
                font-size: 2.5rem;
                text-wrap: nowrap;
                vertical-align: middle;

                padding: 4rem 1vw;
                width: auto;

                background-position-y: 0%;
                transition: scale 200ms, background-position-y 200ms;
                
            }

            .navbar_desktop > a:hover {
                scale: 1.05;
                background-position-y: 100%;
            }


            @media (min-aspect-ratio: 4/3) {
                :root {
                    font-size: .58vw;
                }

                .navbar_desktop {
                    display: flex;
                    
                }

                #navbar_button{
                    display: none;
                }

                .landing_box{
                    margin: 20rem 20rem 10rem 20rem;
                    display: flex;
                    flex-direction: column;
                    
                    align-items: center;
                    text-align: center;
                    padding: 6rem 4rem;
                    gap: 4rem;
                    border-radius: 3rem;
                    background-color: rgba(15, 16, 16, 0.63);
                }
                
                .card_top {
                    padding: 5rem 25rem 5rem 25rem;
                }
                
                .card_bottom{
                    padding: 12rem 25rem 2rem 25rem;
                    gap: 5rem;
                }

                .navbar_content {
                    display: none;
                }

                .arrow_h {
                    transform: translateX(12rem) scaleX(0%) rotate(135deg);
                }

                .arrow_h_pressed {
                    transform: translateX(12rem) scaleX(100%) rotate(135deg);
                }

            }


