    <body>
        <style type="text/css" media="print">
        @page { size: landscape; }
        </style>
        <div class = "banner"> 

            <div class="navbar">
                <a onclick="history.back()"><img src="../images/Leftarrow.png" class = "back_img"></a>

                <div id="error_box">
                    <p id="error_message"> </p>
                </div>
                
                 <a href="/"> <img src= "../images/DLSU_Logo.png" class = "website_logo"> </a> 

                <style>
                    img:hover{
                        cursor: default;
                    }
                </style>    
            
            </div>
            
            <div class="content">

                <h1 id="Header-1" style="position: relative; color: white; left: 50px; top: 40px;"> Schedule </h1>
                <p id="P-1" style="position: relative; color: white; left: 50px; margin-top: 40px; font-style: italic;"> View seats availability of a schedule </p>
                <button id="view_schedule_btn" onclick="show_schedule_form();"> View Schedule </button> 
                <style> 
                    #view_schedule_btn{
                        position: absolute; 
                        left: 85%; 
                        top: 5%; 
                        padding: 15px; 
                        font-weight: bold; 
                        background: transparent;
                        border: 5px solid green;
                        color: white;
                        cursor: pointer; 
                        border-radius: 30px; 
                        transition: 0.5s;
                    }

                    #view_schedule_btn:hover{
                        background: green;
                        color: black;
                    } 

                    #day_schedule {
                        display: flex;
                        width: 90%;
                        flex-direction: row;
                        justify-content: space-around;
                        flex-wrap: wrap;
                        margin: 20px;
                    }

                    .seat_container {
                        display: flex;
                        flex-direction: row;
                        justify-content: center;
                        align-items: center;
                        flex-wrap: wrap;
                        margin: 20px;
                    }

                    .name_container {
                        border: 1px solid;
                        border-color: whitesmoke;
                        width: 100%;

                        {{!-- display: flex; --}}
                        {{!-- flex-direction: column; --}}
                        {{!-- justify-content: center; --}}
                        {{!-- align-content: flex-start; --}}
                        {{!-- align-items: flex-start; --}}
                        {{!-- flex-wrap: wrap; --}}
                        {{!-- margin: 20px; --}}
                    }

                    td {
                        text-align: left;
                        padding: 10px;
                        color: white;
                    }
                    
                    tr:hover {background-color: rgb(50, 104, 32);}

                    .name_container div h4{
                        position: relative;
                        width: 100%;
                        margin-left: 15px;
                        top: 15px;
                        color: white;
                    }

                    h2 {
                        position: relative;
                        /*margin-left: 30px;*/
                        top: 15px;
                        color: white;
                    }

                    .print_btn{
                        margin-top: 20px;
                        width: 300px;
                        border-radius: 30px;
                        padding: 10px 30px;
                        cursor: pointer;
                        outline: none;
                        position: relative;
                        background: none;
                        color: rgb(255, 255, 255);
                        border: 2px solid;
                        transition: 0.5s;
                    }

                    .print_btn.hide{
                        margin-top: 20px;
                        width: 300px;
                        border-radius: 30px;
                        padding: 10px 30px;
                        cursor: pointer;
                        outline: none;
                        position: relative;
                        background: none;
                        color: rgb(255, 255, 255);
                        border: 2px solid;
                        transition: 0.5s;
                        visibility: collapse;
                    }

                    .print_btn:hover{
                        background: rgb(0, 119, 30);
                    }

                </style>

                <hr style="position: relative; margin-top: 30px; border: 2px solid white;">

                <div class = "schedule_container">
                    <div class="viewed_schedule">
                        <h2 id="schedule_label" style="width: 90%;">Seats Availability of Schedules</h2>
                        <button id="print_schedule" class="print_btn hide" onclick="print_schedule()">Print</button>
                        <div id="day_schedule">
                            <div id="to_schedule" style="flex: 1;">
                            </div>
                            <div id="from_schedule" style="flex: 1;">
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="form_box">
                    <div id="blur_box"> </div>
                    <h2> View Schedule </h2>
                    <h4> Seat availability </h4>
                    <hr>
                    <div class="input">
                        <form onsubmit="return find_matching_seats(event);" novalidate>
                            {{!-- <div class="button_box">
                                <div id="btn"></div>
                                <button type="button" class="switch" id="entry_btn" onclick="left_click();" style="text-align: center; left: 10px;" onchange="change_time_slots();"> Entry </button>
                                <button type="button" class="switch" id="exit_btn" onclick="right_click();" style="right: -30px;" onchange="change_time_slots();"> Exit </button> 
                            </div> --}}
                            <br>
                            <select required name="user_location" id="user_location" class="fillup" style="position: relative; top: -25px; display: block; width: 90%;">
                                <option value="" disabled selected hidden s> Select Location </option>
                            </select>

                            <input type="date" placeholder="Date" class="fillup" required name="user_date" id="user_date" style="position: relative; top: -25px; display: block;">
    
                            {{!-- <div class="location">
                                <img src="../images/Help.png" style="width: 25px; height: 25px; position: relative; filter:invert(1); top: 15px; left:10px; cursor: help;" title="Select a designated location">
                                <select required name="user_entryTime" id="user_entryTime" class="fillup" style="width: 120px; ">
                                    <option value="" disabled selected hidden s> Time Slot </option>
                                </select>
                            </div> --}}

                            <br>

                            <button type="submit" class="toggle_btn" id="reserve_btn" onclick="hide_schedule_form();"> View Schedule <style> .toggle_btn{ font-size: large; font-weight: bold;}</style></button>
                        </form>
                        
                    </div>
    
                    <div class="subtext">
                        <a onclick="cancel_schedule_form();" style="cursor:pointer;"> Cancel </a>
                    </div>
    
                </div>
                

            </div>

        </div>
    </body>

    <style>

        .location{
            position: relative; 
            display: flex; 
            width: 330px; 
            margin-left: 20px; 
            top: -35px;
        }

        .form_box{
            height: 330px;
        }

        .content .schedule_container .viewed_schedule {
            display: flex;
            flex-direction: column;
            position: relative;
            margin: 30px auto;
            border: 5px solid white;
            width: 90%;
            height: fit-content;
            background: green;
            border-radius: 50px;
        }

        .schedule_container {
            display: flex;
            justify-content: center;
            align-items: top;
            margin-top: 30px;
            width: 100%;
            height: 80%;
        }

        #schedule_label {
            text-align: center;
            font-size: 25px;
            color: white;
            text-transform: uppercase;
            background-color: #004209;
            padding: 20px;
            border-radius: 40px;
        }

        .viewed_schedule {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
            margin-top: 20px;
            width: 100%;
            height: 90%;
            background: green;
            border-radius: 20px;
        }

        .seat {
            width: 50px;
            height: 50px;
            margin: 5px;
            background-color: white;
            display: flex;
            justify-content: center;
            align-items: center;
            font-weight: bold;
            font-size: x-large;
            border-radius: 20px;
        }

        .schedule_container p {
            margin-top: 20px;
            text-align: center;
            font-style: italic;
        }

        #error_box{
            width: 380px;
            height: 20px;
            top: 10%;
            margin: auto;
            background: rgb(255, 54, 54);
            padding: 5px;
            position: relative;
            border-radius: 20px;
            display: none;
        }

        #error_box p{
            text-align: center;
            font-family: sans-serif;
            font-size: 13px;
            position: relative;
            top: 3px;
